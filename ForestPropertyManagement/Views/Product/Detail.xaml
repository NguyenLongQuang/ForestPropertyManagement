<Window x:Class="ForestPropertyManagement.Views.Product.Detail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForestPropertyManagement.Views.Product"
        mc:Ignorable="d"
        Title="Detail" Height="450" Width="450">
    <Grid>
        <StackPanel>
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Former Name: " FontWeight="Bold"/>
                <TextBlock x:Name="FormerNameText"/>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Vertical">
                <TextBlock Text="Info: " FontWeight="Bold"/>
                <TextBlock x:Name="InfoText"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
